<link rel="stylesheet" href="/css/sign-in.css">
<div id="main">
    <div id="sign-in-container">
        <div class="heading">
            <span>sign up</span>
        </div>
        <% if (locals.flash.error && locals.flash.error.length > 0) { %>
            <div class="flash-container-error">
                <%= flash.error %>
            </div>        
        <% } %>
        <div class="main-body">
            <form action="/users/create" method="post">
                <input type="text" name="name" placeholder="enter name" required>
                <input type="text" name="email" placeholder="enter email" required>
                <input type="password" name="password" id="" placeholder="enter password" required>
                <input type="password" name="confirm_password" id="" placeholder="confirm password" required>
                <input type="submit" value="Sign Up">
                <a href="/users/auth/google">
                    <i class="fa-brands fa-google sign-up"></i>
                    <input type="button" value="Sign Up using Google">
                </a>
                <a href="/users/sign-in">
                    <input type="button" value="Alreay Registered? Sign In">
                </a>
            </form>
        </div>
    </div>
</div>