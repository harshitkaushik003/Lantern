<div class="comment-box" id="comment-<%=comments._id%>">

    <% if (locals.user && locals.user.id == comments.user.id) { %>
        <div class="delete-icon-comment">
            <a class="delete-comment-button" href="/comments/delete/<%= comments.id %>">
                <i class="fa-solid fa-trash-can"></i>                                            
            </a> 
        </div> 
    <% } %>
    <p class="comment-name"><%= comments.user.name %></p>
    <p class="comment-content"><%= comments.content %></p>
</div>