<%if(!excludeNavbar){%>
    <nav>
        <ul>
            <li>Header</li>
            <li>
                <a href="/">
                    <div class="header-btns sign-up">
                        <i class="fa-solid fa-home"></i>
                        Home
                    </div>
                </a>
            </li>
            <%if(locals.user){%>
                <li>
                    <a href="/posts">
                        <div class="header-btns">
                            <i class="fa-solid fa-plus"></i>
                            create
                        </div>
                    </a>
                </li>
            <%}%>
            <li>
                <a href="/users/sign-in">
                    <div class="header-btns">
                        <%if(locals.user){%>
                            <a href="/users/profiles/<%= user.id %>">
                                <i class="fa-regular fa-user"></i>
                                <%= user.name %>
                            </a>
                        <%}else{%>
                            <a href="/users/sign-in">
                                <i class="fa-solid fa-right-to-bracket"></i>
                                Sign In
                            </a>
                        <%}%>
                    </div>
                    
                </a>
            </li>
            <li>
                <%if(locals.user){%>
                    <a href="/users/sign-out">
                        <div class="header-btns sign-up">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            Sign Out
                        </div>
                    </a>                    
                <%}else{%>
                    <a href="/users/sign-up">
                        <div class="header-btns sign-up">
                            <i class="fa-solid fa-user-plus"></i>
                            Sign Up
                        </div>
                    </a>
                <%}%>
            </li>
        </ul>
    </nav>
<%}else{%>
    <nav>
        <ul>
            <li>
                <a href="/">
                    <div class="header-btns sign-up">
                        <i class="fa-solid fa-home"></i>
                        Home
                    </div>
                </a>
            </li>
        </ul>

    </nav>
<%}%>


